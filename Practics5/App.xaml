<Application x:Class="Practics5.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Practics5"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <ControlTemplate TargetType="Button" x:Key="btnTemp">
            <Border CornerRadius="10"
                                Background="{TemplateBinding Background}"
                    BorderBrush="DarkBlue" BorderThickness="1">

                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
            </Border>
            
        </ControlTemplate>
        <Style TargetType="Window" x:Key="tmpWindow">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="DarkBlue" Offset="0"/>
                        <GradientStop Color="White" Offset="1.5"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>



        </Style>

    </Application.Resources>
</Application>
